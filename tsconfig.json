{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"outDir": "lib",
		"lib": [
			"dom",
			"esnext"
		],
		"isolatedModules": true,
		"moduleResolution": "node",
		"jsx": "react",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"strictFunctionTypes": false,
		"esModuleInterop": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"downlevelIteration": true,
		"importHelpers": true
	},
	"files": [
		"src/client/entry.tsx",
		"src/server/entry.ts"
	],
	"exclude": [
		"node_modules",
		"test",
		"dist"
	],
	"include": [
		"bin",
		"src",
		"types",
		"webpack"
	]
}