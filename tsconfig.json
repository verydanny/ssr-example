{
	"compilerOptions": {
		"module": "esnext",
		"target": "es2018",
		"lib": [
			"dom",
			"esnext"
		],
		"moduleResolution": "node",
		"jsx": "react",
		"strict": true,
		"noEmit": true,
		"downlevelIteration": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"strictFunctionTypes": false,
		"esModuleInterop": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"importHelpers": true
	},
	"exclude": [
		"node_modules",
		"test",
		"dist"
	],
	"include": [
		"src"
	]
}